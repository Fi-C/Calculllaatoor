#include <iostream>
#include "math.h"  

int main()
{
    int choice;

    std::cout << "Choose operation:\n";
    std::cout << "1 - Addition\n";
    std::cout << "2 - Multiplication\n";
    std::cout << "3 - Subtraction\n";
    std::cout << "Enter choice: ";
    std::cin >> choice;

    switch (choice)
    {
    case 1:
        summain();  
        break;
    case 2:
        multimain(); 
        break;
    case 3:
        submain(); 
        break;
    default:
        std::cout << "Invalid choice!" << std::endl;
        break;
    }

    return 0;
}
